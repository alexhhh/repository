package com.intern.alexx;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import org.springframework.web.client.RestTemplate;

/**
 * @author malex
 *
 */
@Controller
public class theController implements CommandLineRunner {

	private static final Logger log = LoggerFactory.getLogger(Application.class);
	private String theValue;
	private String[] someValues = new String[20];
	
		
	public void run(String... strings) throws Exception {

		RestTemplate restTemplate = new RestTemplate();
		for(int i=0 ; i<20 ; i++){
		Quote quote = restTemplate.getForObject("http://gturnquist-quoters.cfapps.io/api/random", Quote.class);
		log.info(quote.toString());
		someValues[i] = quote.getValue().getQuote();
		}
	}

	@RequestMapping("/Quote")
	public @ResponseBody String[] showMeTheQuote() {
		return getSomeValues();

	}

	/**
	 * @return the someValues
	 */
	public String[] getSomeValues() {
		return someValues;
	}

	/**
	 * @param someValues the someValues to set
	 */
	public void setSomeValues(String[] someValues) {
		this.someValues = someValues;
	}
	
}
